<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/randMeaning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusedMonthDateColor="#FFFFFF"
        android:selectedWeekBackgroundColor="@color/purple_500"
        android:weekNumberColor="#2196F3"
        android:weekSeparatorLineColor="@color/teal_700" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/toeicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginBottom="47dp"
            android:text="TOEIC"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/opicBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="오픽 홈페이지"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" />

        <Button
            android:id="@+id/opicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginBottom="9dp"
            android:text="OPic"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:text="토익 홈페이지"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/toeicBtn"
            app:layout_constraintStart_toEndOf="@+id/toeicBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>